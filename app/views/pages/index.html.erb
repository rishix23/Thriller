<!--Index Page-->
<div class="row">
<!-- Blog Post Content Column -->
<div class="col-lg-8">
<!-- Blog Post -->
<!-- Title -->
<h1>
      <%= link_to "Article Share", root_path, class: 'navbar_brand' %>
</h1>
<!-- Author -->
<p class="lead">
<a href="#">Share Your Article!</a>
</p>

<!-- Preview Image -->
<img class="img-responsive" src="https://mdbootstrap.com/img/Photos/Horizontal/Nature/full page/img(11).jpg" alt="">

</div>
<hr>

<!-- Posted Comments -->

 <!-- Side Widget Well -->
 <div class="well">
 <h4>Recent Posts</h4>
  <% @articles.each do |a| %>
  Created by: <%= a.user.username %><br />
  <strong><%= link_to a.title, a %></strong>
  <p><%= truncate(a.body)%></p>
     <% end %>
 </div>
 </div>
</div>
<!-- /.row -->
<hr>