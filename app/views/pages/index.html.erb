<!--Index Page-->
<div class="row">
<!-- Blog Post Content Column -->
<div class="col-lg-8">
<!-- Blog Post -->
<!-- Title -->
<h1>
      <%= link_to "Rishi's Articles", root_path, class: 'navbar_brand' %>
</h1>
<!-- Author -->
<p class="lead">
<a href="#">Share Your Article!</a>
</p>
<hr>
<!-- Date/Time -->
<p><span class="glyphicon glyphicon-time"></span> Posted on August 24, 2013 at 9:00 PM</p>
<hr>
<!-- Preview Image -->
<img class="img-responsive" src="http://placehold.it/900x300" alt="">

</div>
<hr>

<!-- Posted Comments -->

 <!-- Side Widget Well -->
 <div class="well">
 <h4>Recent Posts</h4>
  <% @articles.each do |a| %>
  Created by: <%= a.user.username %><br />
  <strong><%= link_to a.title, a %></strong>
  <p><%= truncate(a.body)%></p>
     <% end %>
 </div>
 </div>
</div>
<!-- /.row -->
<hr>